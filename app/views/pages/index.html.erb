<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h1 class="display-1">Flirt Me Chatbot</h1>
    <p class="lead">介紹一下</p>
  </div>
</div>
<div class="container text-center">
  <h2 class="display-2"><%= fa_icon 'list-ol', text: '排行榜' %></i></h2>
  <div class="card-deck">
    <div class="card">
      <div class="card-header h3">最多人覺得<span class="text-success">可以</span></div>
      <ul class="list-group list-group-flush">
        <% @top_dialogues[:likes].each do |d| %>
          <%= link_to dialogue_path(d), class: 'btn btn-outline-success list-group-item d-flex justify-content-between' do %>
            <span>#<%= d.id %></span>
            <span style="overflow: hidden" class="mx-2"><%= d.title %></span>
            <span><%= fa_icon 'thumbs-o-up', text: d.likes %></span>
          <% end%>
        <% end %>
      </ul>
    </div>
    <div class="card">
      <div class="card-header h3">最多人覺得<span class="text-danger">不行</span></div>
      <ul class="list-group list-group-flush">
        <% @top_dialogues[:dislikes].each do |d| %>
          <%= link_to dialogue_path(d), class: 'btn btn-outline-danger list-group-item d-flex justify-content-between' do %>
            <span>#<%= d.id %></span>
            <span style="overflow: hidden" class="mx-2"><%= d.title %></span>
            <span><%= fa_icon 'thumbs-o-down', text: d.dislikes %></span>
          <% end%>
        <% end %>
      </ul>
    </div>
  </div>
</div>
